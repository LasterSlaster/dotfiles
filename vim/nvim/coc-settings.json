{
	"metals.statusBarEnabled": true,
	"metals.superMethodLensesEnabled": true,
  "ltex.enabled": false,
	"codeLens.enable": true,
	"suggest.enablePreview": true,
	"suggest.enablePreselect": false,
	"suggest.noselect": true,
  "explorer.file.showHiddenFiles": true,
  "explorer.position": "left",
  "explorer.quitOnOpen": true,
  "ltex.language": "de-DE",
  "texlab.build.onSave": true,
  "texlab.build.forwardSearchAfter": true,
  "texlab.build.args": [ "-pdf", "-interaction=nonstopmode", "-synctex=1", "-pvc"], 
  "texlab.forwardSearch.executable": "okular", 
  "texlab.forwardSearch.args": [
    "--unique", "file:%p#src:%l%f"
  ],
  "coc.source.vimtex.filetypes": [
    "tex",
    "plaintex"
  ]
}
